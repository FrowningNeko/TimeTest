                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:id="@+id/imkarma"
                    android:background="@drawable/karma"
                    android:layout_toRightOf="@+id/txkarma"
                    android:layout_alignBottom="@+id/txkarma"/>

            </RelativeLayout>



    <RelativeLayout
