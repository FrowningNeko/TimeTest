<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exampl.acer.timernek.Level">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Заработано кармы: "
        android:id="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_below="@+id/progressBar" />
    <TextView
        android:text="999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/karma"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Кармы сгорело: "
        android:id="@+id/textView11"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/karma"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/karma"
        android:layout_toLeftOf="@+id/karma"
        android:layout_toStartOf="@+id/karma" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/karma"
        android:layout_toRightOf="@+id/karma"
        android:layout_toEndOf="@+id/karma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="999"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:text="Потрачено на покупки: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView13"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:text="999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:id="@+id/karmaShop"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="65"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/info"
        android:id="@+id/infoShop"
        android:layout_alignBottom="@+id/karmaShop"
        android:layout_toRightOf="@+id/karmaShop"
        android:layout_toEndOf="@+id/karmaShop"
        android:layout_marginBottom="3dp"/>

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/info"
        android:id="@+id/infoScoreFail"
        android:layout_above="@+id/textView13"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginBottom="3dp"/>

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/info"
        android:id="@+id/infoScore"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginBottom="3dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_karma"
        android:background="@color/orange"
        android:layout_weight="1.1"
        android:id="@+id/karma_ad"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backmob"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/backMob" />
    <ProgressBar
        android:id="@+id/progressBarAdd"
        android:indeterminateDrawable="@drawable/spinner_ring"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_centerInParent="true">
    </ProgressBar>

</RelativeLayout>
